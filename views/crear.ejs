<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Crear Usuario</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #2c3e50; /* Azul medianoche */
      color: #ecf0f1; /* Gris claro */
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .container {
      background-color: #34495e; /* Gris oscuro para el contenedor */
      border-radius: 10px;
      padding: 30px;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
    }
    h1 {
      color: #3498db; /* Azul vibrante para el título */
      text-align: center;
      margin-bottom: 30px;
    }
    .form-label {
      color: #ecf0f1;
      font-weight: bold;
    }
    .form-control {
      background-color: #4a657c; /* Un azul un poco más claro para los inputs */
      color: #ecf0f1;
      border: 1px solid #5a7796;
    }
    .form-control:focus {
      background-color: #5a7796;
      color: #ecf0f1;
      border-color: #3498db;
      box-shadow: 0 0 0 0.25rem rgba(52, 152, 219, 0.25);
    }
    .btn-success {
      background-color: #27ae60; /* Verde esmeralda */
      border-color: #27ae60;
      transition: all 0.3s ease;
    }
    .btn-success:hover {
      background-color: #2ecc71;
      border-color: #2ecc71;
      transform: translateY(-2px);
    }
    .btn-secondary {
      background-color: #7f8c8d; /* Gris concreto */
      border-color: #7f8c8d;
      transition: all 0.3s ease;
    }
    .btn-secondary:hover {
      background-color: #95a5a6;
      border-color: #95a5a6;
      transform: translateY(-2px);
    }
  </style>
</head>
<body class="container mt-5">
  <h1 class="mb-4">Crear nuevo usuario</h1>

  <form id="crearForm" class="row g-3">
    <div class="col-md-6"><label class="form-label">Nombre:<input type="text" class="form-control" name="nombre" required></label></div>
    <div class="col-md-6"><label class="form-label">Teléfono:<input type="text" class="form-control" name="telefono" required></label></div>
    <div class="col-md-6"><label class="form-label">MAC:<input type="text" class="form-control" name="mac" required></label></div>
    <div class="col-md-6"><label class="form-label">App:<input type="text" class="form-control" name="app" required></label></div>
    <div class="col-md-6"><label class="form-label">Plataforma:<input type="text" class="form-control" name="plataforma" required></label></div>
    <div class="col-md-6"><label class="form-label">Valor:<input type="text" class="form-control" name="valor" required></label></div>
    <div class="col-md-6"><label class="form-label">Compartida:<input type="text" class="form-control" name="compartida" required></label></div>
    <div class="col-md-6"><label class="form-label">URL:<input type="text" class="form-control" name="url" required></label></div>
    <div class="col-md-6"><label class="form-label">Fecha contratación:<input type="date" class="form-control" name="fecha_contratacion" required></label></div>
    <div class="col-md-6"><label class="form-label">Fecha vencimiento plan:<input type="date" class="form-control" name="fecha_vencimiento_plan" required></label></div>
    <div class="col-md-6"><label class="form-label">Fecha vencimiento app:<input type="date" class="form-control" name="fecha_vencimiento_app" required></label></div>

    <div class="col-12 mt-4">
      <button type="submit" class="btn btn-success">Crear Usuario</button>
      <a href="/mostrar-todos" class="btn btn-secondary">Cancelar</a>
    </div>
  </form>

  <script>
    document.getElementById('crearForm').addEventListener('submit', async function (e) {
      e.preventDefault();
      const formData = new FormData(this);
      const data = Object.fromEntries(formData.entries());

      const res = await fetch('/crear', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data)
      });

      if (res.ok) {
        window.location.href = '/mostrar-todos';
      } else {
        const mensaje = await res.text();
        alert('Error: ' + mensaje);
      }
    });
  </script>
</body>
</html>
