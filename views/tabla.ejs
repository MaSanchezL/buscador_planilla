<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>Listado de Usuarios</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="container mt-5">
  <h1 class="mb-4">Usuarios</h1>
  <a href="/" class="btn btn-outline-primary mb-4">Volver</a>

  <% if (datos.length === 0) { %>
    <div class="alert alert-warning">No hay datos para mostrar.</div>
  <% } else { %>
    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% datos.forEach(d => { %>
        <div class="col">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title"><%= d.nombre %></h5>
              <p class="card-text">App: <strong><%= d.app %></strong></p>
              <a href="/detalle/<%= d.id %>" class="btn btn-primary">Ver detalle</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
